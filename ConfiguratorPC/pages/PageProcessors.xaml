<Page x:Class="ConfiguratorPC.pages.PageProcessors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConfiguratorPC.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageProcessors" FontFamily="Comic Sans MS" FontSize="16">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ListView Grid.Row="1" Name="LV" Background="#424549" BorderThickness="0" IsVisibleChanged="LV_IsVisibleChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                <Grid Margin="20" HorizontalAlignment="Stretch" Height="100" Width="auto" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3">
                            <Image Source="{Binding image}"></Image>
                        </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1">
                            <TextBlock Foreground="White" TextAlignment="Left" TextWrapping="Wrap" Text="Процессор "></TextBlock>
                            <TextBlock Margin="0 0 0 0" Foreground="White" TextAlignment="Left" TextWrapping="WrapWithOverflow" Text="{Binding name}"></TextBlock>
                    </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1">
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text="{Binding core}"></TextBlock>
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text=" , "></TextBlock>
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text="{Binding streams}"></TextBlock>
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text=" , "></TextBlock>
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text="{Binding cache}"></TextBlock>
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text=" МБ, "></TextBlock>
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text="{Binding freq}"></TextBlock>
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text=" ГГЦ, "></TextBlock>
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text="{Binding heat}"></TextBlock>
                            <TextBlock Foreground="#CCCCCC" FontSize="14" TextAlignment="Left" TextWrapping="Wrap" Text=" Вт"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1">
                            <TextBlock>
                                <Hyperlink Foreground="#ffff00" FontSize="14" Click="Hyperlink_Click" TextDecorations="None">Подробнее</Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2">
                            <TextBlock Foreground="White" Text="{Binding price}"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="3">
                            <Button Style="{StaticResource AddBtn}" x:Name="add_btn" Content="Добавить"></Button>
                        </StackPanel>
                    </Grid>
            </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
